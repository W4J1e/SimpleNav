# Azure OAuth 配置
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# JWT 密钥
JWT_SECRET=your_jwt_secret_key

# 可选：自定义回调URL（如果不设置，将使用默认值）
# AZURE_REDIRECT_URI=http://localhost:3000/api/auth/callback  # 开发环境
# AZURE_REDIRECT_URI=https://yourdomain.com/api/auth/callback  # 生产环境（必须设置）

# 生产环境可选设置
# NEXTAUTH_URL=https://yourdomain.com  # 生产环境基础URL（如果AZURE_REDIRECT_URI未设置，将使用此值）

# 心知天气API配置
NEXT_PUBLIC_SENIVERSE_API_KEY=your_seniverse_api_key